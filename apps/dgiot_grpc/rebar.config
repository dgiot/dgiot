{plugins,
    [{grpc_plugin, {git, "https://github.com/HJianBo/grpc_plugin", {tag, "v0.10.1"}}}
    ]}.

{deps,
    [{grpc, {git, "https://github.com/emqx/grpc", {branch, "master"}}}
    ]}.

{grpc,
    [ {type, all}
        , {protos, ["priv/"]}
        , {out_dir, "src/"}
        , {gpb_opts, [{module_name_suffix, "_pb"}]}
    ]}.

{provider_hooks,
    [{pre, [{compile, {grpc, gen}},
        {clean, {grpc, clean}}]}
    ]}.
